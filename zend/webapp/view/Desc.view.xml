              <Input  visible="true"  value="1100" width="50%" />
              </HBox>
		<Label text="Output Selections" labelFor="GroupA" />
		<RadioButtonGroup id="GroupA" select="onSelect">
			<RadioButton id="createBtn" text="Post Goods Issue" selected="true" />
			<RadioButton id="changeBtn" text="Shipment" />
		</RadioButtonGroup>
	</VBox>
    <Panel headerText="Input Selection" class="sapUiMediumMarginBottom" >
        
            <form:SimpleForm layout="ResponsiveGridLayout">
            <VBox ></VBox>  
            <Label text="Plant"  />
                 <ComboBox width="50%">
                    <core:Item  key="IN" text="INDIA" ></core:Item>
                    <core:Item  key="CA"  text="CANADA"></core:Item>
                    <core:Item  key="AM"  text="AMERICA" > </core:Item>
                 </ComboBox>
                 
                <Label id="delLabel" visible="true" text="Delivery" />
              <Input id="delInput" visible="true"  value=""  />
              <HBox class="sapUiMediumMarginStart">
              <Label id="toLabel" visible="false" text="To" />
              <Input id="toInput" visible="false" value="" width="50%" />
              </HBox>
              <Label id="transporter" visible="false" text="Transporter"/>
            <Input id="transporterInput" visible="false" width="50%"></Input>
            <Label id="vehicleReg" visible="false" text="Vehicle Reg. No"/>
            <Input id="vehicleRegInput" visible="false" width="50%"></Input>
                </form:SimpleForm>
        
    </Panel>
    
    <Panel class="sapUiMediumMarginBottom">
    <form:SimpleForm layout="ResponsiveGridLayout" class="sapUiMediumMarginBottom">  
            <Label text="Sales Organisation"  />
              <Input  value="" width="50%"/>

               <Label text="Plant"  />
              <Input  value="" width="50%"/>
                </form:SimpleForm>
    </Panel>

    <Panel class="sapUiMediumMarginBottom">
    <form:SimpleForm layout="ResponsiveGridLayout" class="sapUiMediumMarginBottom">  
            <Label text="Scan Outer QRCode"  />
              <Input  value="" width="50%"/>
                </form:SimpleForm>
    </Panel>
    <Panel headerText="Laser QR Code Detail" class="sapUiTinyMarginBottom">
        
                <headerToolbar>
                    <OverflowToolbar>
                        
                        <!-- <SearchField width = "30%" search = "onSearch"  /> -->
                        <Title text="Delivery Challan Details"></Title><ToolbarSpacer />
                        <Button icon="sap-icon://add"  type="Emphasized"  />
                        <Button icon="sap-icon://less"  type="Emphasized"  />

                    </OverflowToolbar>
                </headerToolbar>
                <Table 
                    
                    width="auto"
                    id="table">
                <columns>
                <!-- <Column><header><Text text="ID"></Text></header></Column> -->
